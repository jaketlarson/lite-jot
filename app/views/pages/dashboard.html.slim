.row

.large-2.medium-3.columns
  h2#folders-heading
    |Folders
    i.fa.fa-plus.new-folder-icon

  #new-folder-template
    li.new-folder-form-wrap data-hidden='true'
      = simple_form_for Folder.new do |form|
        = form.input :title, :label => false, :autofocus => true

  #folders-wrapper
    ul#folders-list

.large-2.medium-3.columns
  h2#topics-heading
    |Topics
    i.fa.fa-plus.new-topic-icon

  #new-topic-template
    li.new-topic-form-wrap data-hidden='true'
      = simple_form_for Topic.new do |form|
        = form.input :title, :label => false, :autofocus => true

  #topics-wrapper
    ul#topics-list

.large-8.medium-6.columns
  h2#jots-heading Jots

  #jots-wrapper
    i.loading.fa.fa-cog.fa-spin

    .empty-message
      i.fa.fa-pencil-square-o
      p Start typing to keep track of your notes and organize them into topics and folders as you like!

    ul#jots-list

  #jot-entry-template
    li

  = simple_form_for Jot.new do |form|
    = form.input :content, :label => false, :autofocus => true